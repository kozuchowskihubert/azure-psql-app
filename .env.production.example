# Production Environment Configuration
# DO NOT COMMIT THIS FILE WITH REAL VALUES
# Copy this to .env.production and fill in your values

NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_HOST=your-postgres-server.postgres.database.azure.com
DATABASE_PORT=5432
DATABASE_NAME=musicapp
DATABASE_USER=your-database-user
DATABASE_PASSWORD=your-secure-password

# Session Configuration
SESSION_SECRET=change-this-to-a-random-secure-string-minimum-32-characters

# Domain Configuration
DOMAIN=haos.fm
PROTOCOL=https
BASE_URL=https://haos.fm

# Security
ENABLE_SSL=true
FORCE_HTTPS=true
TRUST_PROXY=true

# CORS Configuration
CORS_ORIGIN=https://haos.fm
CORS_CREDENTIALS=true

# Feature Flags (optional)
ENABLE_CALENDAR=false
ENABLE_MEETINGS=false
ENABLE_AUTH=false

# Azure Storage (if using file uploads)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=music-uploads

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
GA_TRACKING_ID=your-google-analytics-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
