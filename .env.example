# =============================================================================
# HAOS.fm Environment Configuration
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database

# Session Secret
SESSION_SECRET=your-secret-key-change-in-production

# Node Environment
NODE_ENV=development

# Azure Blob Storage (for uploaded tracks)
# Get connection string from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=tracks

# Optional Features
ENABLE_SSO=false
ENABLE_CALENDAR_SYNC=false
ENABLE_MEETING_ROOMS=false
