# Terraform Variables - Configure for your environment
# Copy this file to terraform.tfvars and update with your values

env         = "dev"
prefix      = "notesapp"
location    = "westeurope"
db_name     = "notesdb"
db_admin    = "notesadmin"
db_password = "ChangeMe123!SecurePassword"

# Virtual Machine Configuration (feat/tracks branch)
vm_size            = "Standard_B1s"  # Cheapest tier: 1 vCPU, 1GB RAM
vm_admin_username  = "azureuser"
vm_ssh_public_key  = "ssh-rsa AAAAB3Nza... your-ssh-public-key-here"

# Note: For production, use Azure Key Vault or environment variables
# instead of storing passwords in tfvars files
# Generate SSH key: ssh-keygen -t rsa -b 4096 -C "azure-vm@tracks"
