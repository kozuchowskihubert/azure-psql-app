# HAOS.fm Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to git!

# Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Authentication
SESSION_SECRET=your-session-secret-min-32-chars
JWT_SECRET=haos-platform-secret-2025

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/auth/google/callback

# PayU Payment Provider
PAYU_POS_ID=your-payu-pos-id
PAYU_CLIENT_ID=your-payu-client-id
PAYU_CLIENT_SECRET=your-payu-client-secret
PAYU_MD5_KEY=your-payu-md5-key
PAYU_MODE=sandbox  # or 'production'

# Application
APP_URL=https://yourdomain.com
NODE_ENV=production

# Azure Storage (optional)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=your-container-name

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
